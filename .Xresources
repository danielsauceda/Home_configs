! Base16 Bright
! Scheme: Chris Kempson (http://chriskempson.com)

#define base00 #000000
#define base01 #303030
#define base02 #505050
#define base03 #b0b0b0
#define base04 #d0d0d0
#define base05 #e0e0e0
#define base06 #f5f5f5
#define base07 #ffffff
#define base08 #fb0120
#define base09 #fc6d24
#define base0A #fda331
#define base0B #a1c659
#define base0C #32f3e3
#define base0D #6fb3d2
#define base0E #d381c3
#define base0F #be643c



!
! effects
!
! enable transparency
URxvt*transparent:          true
! percentage of shading
URxvt*.shading:             20

!
! Other settings
URxvt.perl-ext-common: ...,keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt*iso14755: False


! URxvt.perl-ext-common: ...,keyboard-select

!
! scrollbar
!
! enable scrollbar
URxvt*scrollBar:          true     
! scrollbar width
URxvt*thickness:          5
! scrollbar color
URxvt*scrollColor:        #1E1E1E
! scrollbar trough area color
!URxvt*troughColor:        #333333
! scrollbar without a trough
!URxvt*scrollBar_floating: false
! scrollbar to the right
URxvt*scrollBar_right:    true
! scrollbar style
URxvt*scrollstyle:        plain


!
! fonts
!
! xft fonts
!URxvt*font: xft:DejaVu Sans Mono for Powerline:size=10
URxvt*font:     xft:mono:medium:size=10.5
!URxvt*letterSpace: -1
URxvt*boldFont: xft:mono:medium:size=10.5
!URxvt*boldFont: xft:DejaVu Sans Mono for Powerline:bold:size=11
! normal fonts
!URxvt*font:-*-courier-medium-r-normal-*-14-*-*-*-*-*-iso8859-1
!URxvt*boldFont:-*-courier-bold-r-normal-*-14-*-*-*-*-*-iso8859-1






*.foreground:   base05
*.background:   base00
*.cursorColor:  base05

*.color0:       base00
*.color1:       base08
*.color2:       base0B
*.color3:       base0A
*.color4:       base0D
*.color5:       base0E
*.color6:       base0C
*.color7:       base05

*.color8:       base03
*.color9:       base08
*.color10:      base0B
*.color11:      base0A
*.color12:      base0D
*.color13:      base0E
*.color14:      base0C
*.color15:      base07

! Note: colors beyond 15 might not be loaded (e.g., xterm, urxvt),
! use 'shell' template to set these if necessary
*.color16:      base09
*.color17:      base0F
*.color18:      base01
*.color19:      base02
*.color20:      base04
*.color21:      base06
